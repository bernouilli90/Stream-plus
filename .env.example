# ================================================
# Stream Plus - Variables de Entorno
# ================================================
# Copia este archivo a .env y personaliza los valores
# Copy this file to .env and configure variables

# ================================================
# CONFIGURACIÓN DE DISPATCHARR (REQUERIDO)
# Dispatcharr API Configuration (REQUIRED)
# ================================================
DISPATCHARR_API_URL=http://localhost:8080
DISPATCHARR_API_USER=admin
DISPATCHARR_API_PASSWORD=changeme

# ================================================
# CONFIGURACIÓN DE FLASK (OPCIONAL)
# Flask Configuration (OPTIONAL)
# ================================================
PORT=5000
FLASK_DEBUG=False
SECRET_KEY=dev-secret-key-change-in-production

# ================================================
# CONFIGURACIÓN DOCKER (OPCIONAL)
# Docker Configuration (OPTIONAL)
# ================================================
# Zona horaria del contenedor / Container timezone
TZ=Europe/Madrid

# UID y GID del usuario (para permisos de archivos)
# User UID and GID (for file permissions)
# Linux/Mac: usa $(id -u) y $(id -g)
# Windows: normalmente 1000
USER_UID=1000
USER_GID=1000

# ================================================
# LOGGING (OPCIONAL / OPTIONAL)
# ================================================
LOG_LEVEL=INFO
LOG_FILE=stream_plus.log
